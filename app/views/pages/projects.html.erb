<%= render 'menu' %>

<%= render 'jumbotron', pagetitle: "projets", pagejumbo: 'mars.jpeg', bandtitle: "Explorez !", bandcontent: "Ci-dessous se trouve une liste des projets auquels j'ai participé ainsi que leurs détails. Cliquez sur <i class='fa fa-info-circle'></i> pour en savoir plus sur un projet en particulier !", credits: "Crédits photos: Non renseigné" %>

<main class="projects" id="main">

  <h1> Projets </h1>

  <ul>
  <% @projects.each do |project| %>
      <li>
        <article>
          <h1> <%= project.title %> </h1>

          <div class="thumb">
            <img src="<%=project.cover%>">
          </div>
          <div class="technos">
            <% project.technologies.each do |tech|%>
            <%= image_tag "#{tech.logo}" %>
            <% end %>
          </div>
          <p>Description: <%= project.resume %>... </p>

          <div class="intel">
            <div class="social">
              <div class="iconContainer">
                <a href="<%= project.github %>" title="Voir le repo Github"><i class="fa fa-github"></i></a>
              </div>
              <div class="iconContainer">
                <a href="<%= project.twitter %>" title="Voir sur Twitter"><i class="fa fa-twitter"></i></a>
              </div>
              <div class="iconContainer">
                <a href="/project/<%= project.id %>" title="Plus d'infos"><i class="fa fa-info-circle"></i></a>
              </div>
              <div class="iconContainer">
                <a href="<%= project.url %>" title="Voir sur le Web"><i class="fa fa-eye"></i></a>
              </div>
            </div>
            <div class="label">
              <p> <%= project.created_at.strftime("%d %b, %Y") %> By Yoan </p>
            </div>
          </div>
        </article>
      </li>
  <% end %>
  </ul>

</main>
