<%= render 'menu' %>

<%= render 'jumbotron', pagetitle: @project.title, pagejumbo: @project.cover, bandtitle: "Résumé:", bandcontent: @project.resume, credits: false %>

<main class="showprojects" id="main">



  <article>
    <h1><%= @project.startdate %></h1><h1><%= @project.enddate %></h1>
    <div class="thumb">
      <%= image_tag "#{@project.cover(:medium)}" %>
    </div>
    <div class="technos">
      <% @project.technologies.each do |tech|%>
      <%= image_tag "#{tech.logo}" %>
      <% end %>
    </div>

    <p> <%= @project.description %></p>
    <p> Le github du projet: <a href="<%= @project.github %>"> <%= @project.github %> </a></p>
    <% if @project.twitter.length < 1 %>
      <p> Le twitter du projet: <a href="<%= @project.twitter %>"> <%= @project.twitter %> </a></p>
    <% end %>
    <% if @project.url.length < 1 %>
      <p> Le site du projet: <a href="<%= @project.url %>"> <%= @project.url %> </a></p>
    <% end %>
  </article>
</main>
