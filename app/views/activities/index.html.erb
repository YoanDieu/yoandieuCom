<%= render 'admin_menu' %>

<% if current_user %>
  Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
<% end %>

<p id="notice"><%= notice %></p>

<main class="noJumbotron">
  <h1>Listing Activities</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Kind</th>
        <th>Institution</th>
        <th>Description</th>
        <th>Github</th>
        <th>Twitter</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.title %></td>
          <td><%= activity.kind %></td>
          <td><%= activity.institution %></td>
          <td><%= activity.description %></td>
          <td><%= activity.github %></td>
          <td><%= activity.twitter %></td>
          <td><%= activity.url %></td>
          <td><%= link_to 'Show', activity %></td>
          <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
          <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Activity', new_activity_path %>
</main>
