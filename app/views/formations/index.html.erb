<h1>Listing Formations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Institution</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Skills</th>
      <th>Certificate</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formations.each do |formation| %>
      <tr>
        <td><%= formation.name %></td>
        <td><%= formation.institution %></td>
        <td><%= formation.startdate %></td>
        <td><%= formation.enddate %></td>
        <td><%= formation.skills %></td>
        <td><%= formation.certificate %></td>
        <td><%= formation.url %></td>
        <td><%= link_to 'Show', formation %></td>
        <td><%= link_to 'Edit', edit_formation_path(formation) %></td>
        <td><%= link_to 'Destroy', formation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

